<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/card_border"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_accepted_request_image"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_margin="8dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_accepted_request_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="اسم المربية"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/item_accepted_request_booking_type"
            app:layout_constraintStart_toEndOf="@id/item_accepted_request_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_accepted_request_booking_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="يومي"
            android:textColor="@color/dbink"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/item_accepted_request_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_accepted_request_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="20-10-2022"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/item_accepted_request_image"
            app:layout_constraintTop_toBottomOf="@id/item_accepted_request_name" />

        <TextView
            android:id="@+id/item_accepted_request_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="4dp"
            android:ellipsize="end"
            android:gravity="start"
            android:singleLine="true"
            android:text="25-10-2022"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@id/item_accepted_request_image"
            app:layout_constraintTop_toBottomOf="@id/item_accepted_request_start_date" />

        <Button
            android:id="@+id/chat_item_accepted_request_btn"
            android:layout_width="124dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:background="@drawable/buttonbg"
            android:padding="0dp"
            android:text="محادثة"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_accepted_request_booking_type"
            app:layout_constraintTop_toBottomOf="@+id/item_accepted_request_booking_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>